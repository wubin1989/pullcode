{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "dist",
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "types": ["node"],
      "typeRoots": ["./node_modules/@types/", "src/types"],
      "noImplicitAny": false,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/types/**/*.d.ts",
      "src/types/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
}